{
    "name": "Attestation covid vite fait !",
    "version": "1.0.0",
    "description": "Remplissez votre attestation de déplacement dérogatoire en deux secondes !",
    "manifest_version": 2,
    "permissions": [
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/16.png",
            "32": "images/32.png",
            "48": "images/48.png",
            "128": "images/128.png"
        }
    },
    "icons": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://media.interieur.gouv.fr/*"
            ],
            "js": [
                "content/content.js"
            ]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": false,
        "open_in_tab": true
    }
}